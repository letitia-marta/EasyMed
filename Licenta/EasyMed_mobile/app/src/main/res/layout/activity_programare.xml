<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#2A363F"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#13181D"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/logo"
            android:text="ðŸ¥"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/app_name"
            android:text="EasyMed"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:paddingStart="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/profile_icon"
            android:text="ðŸ‘¤"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:clickable="true"
            android:focusable="true"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Back Button -->
            <TextView
                android:id="@+id/back_button"
                android:text="â† ÃŽnapoi la dashboard"
                android:textColor="@android:color/white"
                android:background="#13181D"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- Title -->
            <TextView
                android:id="@+id/title_programare"
                android:text="ProgramÄƒri"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#5cf9c8"
                android:layout_marginBottom="16dp" />

            <!-- Doctor Selection -->
            <Button
                android:id="@+id/select_doctor_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SelecteazÄƒ medicul"
                android:textColor="@android:color/black"
                android:backgroundTint="#5cf9c8"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Selected Doctor Preview -->
            <TextView
                android:id="@+id/selected_doctor_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Calendar View Placeholder -->
            <FrameLayout
                android:id="@+id/calendar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Consultation Type Spinner -->
            <Spinner
                android:id="@+id/consultation_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:background="#13181D"
                android:popupBackground="#13181D" />

            <!-- Time Slots RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/time_slots_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Save Appointment Button -->
            <Button
                android:id="@+id/save_appointment_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SalveazÄƒ programarea"
                android:textColor="@android:color/black"
                android:backgroundTint="#5cf9c8"
                android:textSize="18sp"
                android:padding="16dp"
                android:visibility="gone" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/loading_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <TextView
        android:text="EasyMed Â© 2024"
        android:textColor="#cccccc"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="14sp" />

</LinearLayout> 