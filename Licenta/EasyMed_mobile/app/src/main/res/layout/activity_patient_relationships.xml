                    android:layout_height="2dp"
                    android:layout_marginBottom="16dp"
                    android:background="#5cf9c8" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
