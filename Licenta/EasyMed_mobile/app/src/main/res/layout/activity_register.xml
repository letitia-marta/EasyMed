<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A363F"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creare cont nou"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creați-vă un cont pentru a accesa platforma EasyMed."
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Form fields -->
        <EditText
            android:id="@+id/nume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nume"
            android:background="@drawable/edittext_underline"
            android:textColorHint="#AAAAAA"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/prenume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prenume"
            android:background="@drawable/edittext_underline"
            android:textColorHint="#AAAAAA"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_underline"
            android:textColorHint="#AAAAAA"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parolă"
            android:inputType="textPassword"
            android:background="@drawable/edittext_underline"
            android:textColorHint="#AAAAAA"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmare parolă"
            android:inputType="textPassword"
            android:background="@drawable/edittext_underline"
            android:textColorHint="#AAAAAA"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/cnp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CNP"
            android:inputType="number"
            android:background="@drawable/edittext_underline"
            android:textColorHint="#AAAAAA"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/data_nasterii"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data nașterii"
            android:inputType="date"
            android:background="@drawable/edittext_underline"
            android:textColorHint="#AAAAAA"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <Spinner
            android:id="@+id/sex_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:spinnerMode="dropdown"
            android:popupBackground="#2A363F"
            android:entries="@array/sex_options"
            android:backgroundTint="#5cf9c8"
            android:padding="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Înregistrează-te"
            android:textColor="#2A363F"
            android:textStyle="bold"
            android:backgroundTint="#5cf9c8"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
